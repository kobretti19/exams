<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>signUp</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <header><%- include("partials/header") %></header>
  <body>
    <main>
      <div class="login-box">
        <h2>signUP</h2>
        <form class="formsignUP"
        action="/api/v1/users/signup"
        method="post" enctype="
        multipart/form-data">
          <div class="user-box">
            <input type="text" name="name" id="namesignUp" required>
            <label>name</label>
          </div>
          <div class="user-box">
            <input type="email" name="email" id="emailsignUP" required>
            <label>email</label>
          </div>
          <div class="user-box">
            <input type="password" name="password" id="passwordsignUP" required>
            <label>password</label>
          </div>
          <div class="user-box">
            <input type="password" name="passwordConfirm" id="passwordConfirm" required>
            <label>PasswordConfirm</label>
            <div class="btn-container">
              <button class="btn-login" type="submit">Sign UP</button>
            </div>
          </div>
        </form>
      </div>
